              //      %a{ :href => "http://www.google.com/calendar/render?cid=http://splendidmoons.github.io/ical/mahanikaya.ical" }
              //        Add to Google Calendar
      %li.planners
        .modal
          %label{:for => "modal-4"}
            %span.fa.fa-file-pdf-o
          %input#modal-4.modal-state{:type => "checkbox"}/
          .modal-window
            .modal-inner
              %label.modal-close{:for => "modal-4"}
              %h1 Year Planner PDFs
              %p
                Download PDF files:
              %p

                %span.fa.fa-file-pdf-o
                = succeed "," do
                  %a{ href: "http://splendidmoons.github.io/pdf/mahanikaya/2017-fs-year-planner-A4.pdf" } 2017

                %span.fa.fa-file-pdf-o
                = succeed "," do
                  %a{ href: "http://splendidmoons.github.io/pdf/mahanikaya/2016-fs-year-planner-A4.pdf" } 2016

                %span.fa.fa-file-pdf-o
                = succeed "," do
                  %a{ href: "http://splendidmoons.github.io/pdf/mahanikaya/2015-fs-year-planner-A4.pdf" } 2015

                %span.fa.fa-file-pdf-o
                = succeed "," do
                  %a{ href: "http://splendidmoons.github.io/pdf/mahanikaya/2014-fs-year-planner-A4.pdf" } 2014

                %span.fa.fa-file-pdf-o
                %a{ href: "http://splendidmoons.github.io/pdf/mahanikaya/2013-fs-year-planner-A4.pdf" } 2013
      <% } %>
  %section#calendar_message
  %section#calendar_nav
  %section#calendar_wrap
    #calendar
  %section#messages


%script#calendarNav-template{ type: 'text/template' }
  #calendar_period
    %ul
      %li.year
        %label.ui.quiet
          %span.prev.fa.fa-chevron-left
        %span.val <%= year %> / <%= yearBE %>
        %label.ui.quiet
          %span.next.fa.fa-chevron-right
      <% if (period === 'Month') { %>
      %li.month
        %label.ui.quiet
          %span.prev.fa.fa-chevron-left
        %span.val <%= monthName %>
        %label.ui.quiet
          %span.next.fa.fa-chevron-right
      <% } else { %>
      %li.month &nbsp;
      <% } %>
  #calendar_menu
    %ul.settings
      %li
        %label.ui.quiet
          <% if (listView === true) { %>
          %input{ type: 'checkbox', name: 'list_view', checked: 'checked' }
          <% } else { %>
          %input{ type: 'checkbox', name: 'list_view' }
          <% } %>
          %span Compact
      %li
        <% if (period === 'Month') { %>
        %label.ui.quiet
          %input{ type: 'radio', name: 'period', value: 'Year' } Year
        %label.ui.quiet
          %input{ type: 'radio', name: 'period', value: 'Month', checked: 'checked' } Month
        <% } else { %>
        %label.ui.quiet
          %input{ type: 'radio', name: 'period', value: 'Year', checked: 'checked' } Year
        %label.ui.quiet
          %input{ type: 'radio', name: 'period', value: 'Month' } Month
        <% } %>

